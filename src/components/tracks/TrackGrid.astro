---
// src/components/tracks/TrackGrid.astro
import type { SpotifyTrack } from '../../types/spotify';
import TrackItem from './TrackItem.astro';

interface Props {
  tracks: SpotifyTrack[];
}

const { tracks } = Astro.props;
---

<div class="w-full px-2 py-6">
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-x-4 gap-y-10">
    {tracks.map((track) => (
      <div class="group transition-transform duration-300 hover:scale-[1.03] will-change-transform">
        <TrackItem track={track} />
      </div>
    ))}
  </div>
</div>