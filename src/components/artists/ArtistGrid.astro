---
// src/components/artists/ArtistGrid.astro
import type { SpotifyArtist } from '../../types/spotify';
import ArtistItem from './ArtistItem.astro';

interface Props {
  artists: SpotifyArtist[];
}

const { artists } = Astro.props;
---

<div class="w-full px-2 py-6">
  <div 
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-x-4 gap-y-8"
  >
    {artists.map((artist) => (
      <div class="flex flex-col items-center group transition-transform duration-300 hover:scale-[1.02]">
        <ArtistItem 
          id={artist.id}
          name={artist.name}
          image={artist.images[0]?.url}
        />
      </div>
    ))}
  </div>
</div>