---
// src/components/artists/ArtistItem.astro
interface Props {
  id: string;
  name: string;
  image: string;
  size?: 'sm' | 'md' | 'lg';
}

const { id, name, image, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'h-16 w-16',
  md: 'h-24 w-24',
  lg: 'h-32 w-32'
};
---

<a 
  href={`/artist/${id}`} 
  class="group flex flex-col items-center gap-4 transition-transform active:scale-95 flex-shrink-0 snap-center p-2"
>
  <div class={`relative ${sizeClasses[size]} z-10`}>
    <img 
      src={image} 
      alt={name}
      class="h-full w-full object-cover rounded-full border-2 border-transparent transition-all duration-500 ease-out group-hover:scale-125 group-hover:border-[#1DB954] group-hover:shadow-[0_0_40px_rgba(29,185,84,0.3)] group-hover:z-50"
      transition:name={`artist-image-${id}`}
    />
  </div>
  <span 
    class="w-24 truncate text-center text-[11px] font-black text-zinc-500 transition-colors duration-300 group-hover:text-white uppercase tracking-tighter"
    transition:name={`artist-name-${id}`}
  >
    {name}
  </span>
</a>