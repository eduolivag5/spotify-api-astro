---
interface Props {
  id: string;
  name: string;
  image: string;
}

const { id, name, image } = Astro.props;
---

<a 
  href={`/artist/${id}`} 
  class="group relative flex flex-col p-2.5 rounded-[2rem] 
         bg-white/[0.03] backdrop-blur-md
         border border-white/10
         shadow-[0_8px_32px_rgba(0,0,0,0.3),inset_0_0_0_1px_rgba(255,255,255,0.05)]
         hover:bg-white/[0.08] hover:scale-[1.02]
         transition-all duration-500 ease-[cubic-bezier(0.23,1,0.32,1)]
         w-full max-w-[140px] overflow-hidden"
>
  <div class="absolute inset-0 bg-gradient-to-br from-white/[0.12] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <div class="relative aspect-square overflow-hidden rounded-full bg-zinc-800 shadow-[inset_0_0_12px_rgba(0,0,0,0.4)] mb-3 ring-1 ring-white/5">
    <img 
      src={image} 
      class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-110" 
      alt={name}
      loading="lazy"
      transition:name={`artist-image-${id}`}
    />
    
    <div class="absolute inset-0 flex items-center justify-center bg-[#1DB954]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
        <div class="bg-[#1DB954] p-2 rounded-full shadow-[0_0_20px_rgba(29,185,84,0.5)] transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="black">
                <path d="M8 5v14l11-7z"/>
            </svg>
        </div>
    </div>
  </div>

  <div class="relative flex flex-col items-center px-1">
    <h3 
      class="text-[10px] font-black tracking-widest truncate text-white/80 group-hover:text-[#1DB954] transition-colors uppercase text-center w-full" 
      title={name}
      transition:name={`artist-name-${id}`}
    >
      {name}
    </h3>
    
    <div class="flex items-center gap-1.5 mt-1 opacity-50 group-hover:opacity-100 transition-opacity">
        <span class="text-[8px] px-2 py-[1px] rounded-full bg-white/5 border border-white/10 text-white/70 font-bold uppercase tracking-tighter">
            Artista
        </span>
    </div>
  </div>
</a>

<style>
  a {
    /* Mantenemos el borde est√°tico para evitar el jittering */
    box-shadow: 
      0 10px 30px -10px rgba(0, 0, 0, 0.5),
      inset 0 1px 1px rgba(255, 255, 255, 0.05);
  }
</style>