---
interface Props {
  id: string;
  title: string;
  image: string;
  type: string;
  transitionName?: string;
}

const { id, title, image, type, transitionName } = Astro.props;
---

<header class="relative mb-16 flex flex-col md:flex-row items-center md:items-end gap-10 pt-8 isolate">
  <div class="relative flex-shrink-0 group [transform:translateZ(0)]">
    <div class="relative h-56 w-56 md:h-64 md:w-64 p-1 rounded-[32px] bg-white/5 backdrop-blur-2xl border border-white/10 
                shadow-[0_32px_64px_-16px_rgba(0,0,0,0.6)] [transform:translateZ(0)] [backface-visibility:hidden]">
      <img 
        src={image} 
        alt={title}
        class="h-full w-full object-cover rounded-[28px] [box-shadow:inset_0_0_20px_rgba(0,0,0,0.3)] 
               transition-transform duration-700 ease-[cubic-bezier(0.23,1,0.32,1)] 
               group-hover:scale-[1.03] will-change-transform [backface-visibility:hidden]"
        transition:name={`${transitionName}-image-${id}`}
        decoding="async"
      />
      <div class="absolute inset-1 rounded-[28px] bg-gradient-to-tr from-transparent via-white/5 to-white/10 
                  pointer-events-none opacity-100 will-change-opacity"></div>
    </div>
  </div>

  <div class="flex flex-col gap-4 text-center md:text-left pb-4 [transform:translateZ(0)]">
    <span class="inline-flex w-fit mx-auto md:mx-0 px-3 py-1 rounded-full bg-white/5 border border-white/10 
                 text-white/50 text-[10px] font-black uppercase tracking-widest antialiased">
      {type}
    </span>
    
    <h1 
      class="text-5xl md:text-7xl font-black tracking-tighter text-white [filter:drop-shadow(0_20px_40px_rgba(0,0,0,0.5))] 
             antialiased [transform:translateZ(0)]"
      transition:name={`${transitionName}-name-${id}`}
    >
      {title}
    </h1>

    <div class="flex items-center justify-center md:justify-start gap-4 [transform:translateZ(0)]">
      <slot name="details" />
    </div>
  </div>
</header>