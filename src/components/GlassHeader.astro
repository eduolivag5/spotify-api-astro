---
// src/components/shared/GlassHeader.astro
interface Props {
  id: string;
  title: string;
  image: string;
  type: string;
  transitionName?: string;
}

const { id, title, image, type, transitionName } = Astro.props;
---

<header class="relative mb-16 flex flex-col md:flex-row items-center md:items-end gap-10 pt-8">
  {/* Contenedor de Imagen Liquid Glass */}
  <div class="relative flex-shrink-0 group">
    <div class="relative h-56 w-56 md:h-64 md:w-64 p-1 rounded-[32px] bg-white/5 backdrop-blur-2xl border border-white/10 shadow-[0_32px_64px_-16px_rgba(0,0,0,0.6)]">
      <img 
        src={image} 
        alt={title}
        class="h-full w-full object-cover rounded-[28px] shadow-[inset_0_0_20px_rgba(0,0,0,0.3)] transition-transform duration-700 group-hover:scale-[1.03]"
        transition:name={`${transitionName}-image-${id}`}
      />
      <div class="absolute inset-1 rounded-[28px] bg-gradient-to-tr from-transparent via-white/5 to-white/10 pointer-events-none"></div>
    </div>
  </div>

  <div class="flex flex-col gap-4 text-center md:text-left pb-4">
    <span class="inline-flex w-fit mx-auto md:mx-0 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-white/50 text-[10px] font-black uppercase tracking-widest">
      {type}
    </span>
    
    <h1 
      class="text-5xl md:text-7xl font-black tracking-tighter text-white drop-shadow-2xl"
      transition:name={`${transitionName}-name-${id}`}
    >
      {title}
    </h1>

    <div class="flex items-center justify-center md:justify-start gap-4">
      <slot name="details" />
    </div>
  </div>
</header>