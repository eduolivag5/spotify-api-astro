---
interface Props {
  title: string;
  linkText?: string;
  href?: string;
}
const { title, linkText, href = "#" } = Astro.props;
---

<section class="flex flex-col gap-4 isolate [transform:translateZ(0)]"> 
  <header class="flex items-end justify-between py-2 [transform:translateZ(0)]">
    <h2 class="text-xl font-bold tracking-tighter text-white antialiased">
      {title}<span class="text-green-400">.</span>
    </h2>

    {linkText && (
      <a 
        href={href} 
        class="rounded-full bg-white/5 border border-white/10 px-4 py-1.5 
               text-[10px] font-bold uppercase tracking-widest text-zinc-500
               hover:bg-white/10 hover:text-white hover:border-white/20
               transition-all duration-300 ease-out antialiased
               [transform:translateZ(0)] [backface-visibility:hidden]
               active:scale-95 will-change-transform"
      >
        {linkText}
      </a>
    )}    
  </header>

  <div class="relative [transform:translateZ(0)]">
    <slot />
  </div>
</section>