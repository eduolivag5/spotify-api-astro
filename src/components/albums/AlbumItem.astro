---
import type { SpotifyAlbum } from '../../types/spotify';


interface Props {
  album: SpotifyAlbum;
  showType?: boolean;
}

const { album, showType = true } = Astro.props;
const releaseYear = album.release_date.split('-')[0];
---

<a 
  href={`/album/${album.id}`} 
  class="group relative flex flex-col p-2.5 rounded-xl 
         bg-white/[0.03] backdrop-blur-md
         border border-white/10
         shadow-[0_8px_32px_rgba(0,0,0,0.3),inset_0_0_0_1px_rgba(255,255,255,0.05)]
         hover:bg-white/[0.08] hover:border-white/20 hover:scale-[1.02]
         transition-all duration-500 ease-[cubic-bezier(0.23,1,0.32,1)]
         w-full max-w-[160px] overflow-hidden"
>
  {/* Reflejo superior (Glossy effect) */}
  <div class="absolute inset-0 bg-gradient-to-br from-white/[0.08] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  {/* Contenedor de Imagen con bisel interno */}
  <div class="relative aspect-square overflow-hidden rounded-xl bg-zinc-800 shadow-[inset_0_0_12px_rgba(0,0,0,0.2)] mb-2.5">
    <img 
      src={album.images[0]?.url} 
      class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-110" 
      alt={album.name}
      loading="lazy"
      transition:name={`album-image-${album.id}`}
    />
  </div>

  {/* Texto con tipografía nítida */}
  <div class="relative flex flex-col px-0.5">
    <h3 
      class="text-[10px] font-semibold tracking-wide truncate text-white/90 group-hover:text-white transition-colors" 
      title={album.name}
    >
      {album.name}
    </h3>
    
    <div class="flex items-center gap-1.5 mt-1">
      <span class="text-[9px] text-white/40 font-medium">
        {releaseYear}
      </span>
      {showType && (
        <>
          <span class="text-[9px] text-white/10">•</span>
          <span class="text-[8px] px-1.5 py-[1px] rounded-full bg-white/5 border border-white/10 text-white/50 font-bold uppercase tracking-widest">
            {album.album_type === 'album' ? 'Álbum' : 'Single'}
          </span>
        </>
      )}
    </div>
  </div>
</a>

<style>
  /* Efecto de borde de cristal líquido extra */
  a {
    box-shadow: 
      0 10px 30px -10px rgba(0, 0, 0, 0.5),
      inset 0 1px 1px rgba(255, 255, 255, 0.1);
  }
</style>