---
// src/components/playlists/PlaylistGrid.astro
import type { SpotifyPlaylist } from '../../types/spotify';
import PlaylistItem from './PlaylistItem.astro';

interface Props {
  playlists: SpotifyPlaylist[];
}

const { playlists } = Astro.props;
---

<div class="w-full px-2 py-6">
  <div 
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-x-4 gap-y-10"
  >
    {playlists.map((playlist) => (
      <div class="group transition-transform duration-300 hover:scale-[1.03] will-change-transform">
        <PlaylistItem playlist={playlist} />
      </div>
    ))}
  </div>
</div>