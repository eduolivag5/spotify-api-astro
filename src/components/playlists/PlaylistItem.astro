---
import type { SpotifyPlaylist } from '../../types/spotify';
import MediaCard from '../MediaCard.astro';

interface Props {
  playlist: SpotifyPlaylist;
}

const { playlist } = Astro.props;
---

<MediaCard 
  href={playlist.external_urls.spotify}
  title={playlist.name}
  subtitle="Playlist"
  image={playlist.images[0]?.url}
  type="playlist"
/>