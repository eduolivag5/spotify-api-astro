---
import Layout from '../layouts/Layout.astro';
import RecentTracks from '../components/RecentTracks.astro';
import TopArtists from '../components/TopArtists.astro';
---

<Layout title="Sound Archive | My Spotify Dashboard">
  <header class="mb-12">
    <h1 class="text-4xl md:text-6xl font-black tracking-tighter">
      Sound <span class="text-[#1DB954]">Archive.</span>
    </h1>
    <p class="mt-2 text-zinc-500 font-medium">Curando mi propia biblioteca musical.</p>
  </header>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <aside class="flex flex-col gap-6">
      <TopArtists />

      <div class="group relative overflow-hidden rounded-3xl bg-[#1DB954] p-8 text-black transition-all hover:bg-[#1ed760]">
        <div class="relative z-10">
          <h2 class="text-2xl font-black leading-tight mb-4 tracking-tight">Focus & Flow</h2>
          <p class="mb-6 text-sm font-bold opacity-80 uppercase tracking-wide">Mi Playlist de Programación</p>
          <a href="#" class="inline-flex items-center justify-center rounded-full bg-black px-6 py-3 text-sm font-black text-white transition-transform active:scale-95 group-hover:shadow-xl">
            Escuchar ahora
          </a>
        </div>
        <div class="absolute -right-8 -bottom-8 h-32 w-32 rounded-full bg-black/10 blur-3xl"></div>
      </div>

      <div class="rounded-3xl bg-zinc-900/50 border border-zinc-800/50 p-6">
        <h3 class="font-bold text-zinc-400 uppercase text-[10px] tracking-[0.2em] mb-4 text-center">Frecuencias Dominantes</h3>
        <div class="flex flex-wrap justify-center gap-2">
          {['Lo-fi', 'Indie Rock', 'Phonk', 'Techno', 'Jazz'].map(genre => (
            <span class="rounded-full bg-zinc-950 px-4 py-1.5 text-[11px] font-bold text-zinc-300 border border-zinc-800 hover:border-[#1DB954] transition-colors cursor-default">
              {genre}
            </span>
          ))}
        </div>
      </div>
    </aside>

  </div>

  <footer class="mt-24 border-t border-zinc-900 py-10 flex flex-col items-center gap-4">
    <div class="h-1 w-12 rounded-full bg-zinc-800"></div>
    <p class="text-[10px] font-bold uppercase tracking-[0.3em] text-zinc-600">
      Spotify API Data Pipeline • 2026
    </p>
  </footer>
</Layout>