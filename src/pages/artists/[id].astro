---
import Layout from '../../layouts/Layout.astro';
import { getArtist, getArtistTopTracks, getArtistAlbums } from '../../lib/spotify';
import type { SpotifyArtist, SpotifyTrack, SpotifyAlbum } from '../../types/spotify';

const { id } = Astro.params;

if (!id) return Astro.redirect('/404');

const artist = await getArtist(id) as SpotifyArtist | null;
const topTracks = await getArtistTopTracks(id) as SpotifyTrack['item'][];
const albums = await getArtistAlbums(id) as SpotifyAlbum[];

if (!artist) return Astro.redirect('/404');

const formatDuration = (ms: number) => {
  const min = Math.floor(ms / 60000);
  const sec = Math.floor((ms % 60000) / 1000);
  return `${min}:${sec.toString().padStart(2, '0')}`;
};
---

<Layout title={`${artist.name} | Archive`}>
  <header class="relative mb-16 flex flex-col md:flex-row items-center md:items-end gap-8 pt-4">
    <div class="relative flex-shrink-0">
      <img 
        src={artist.images?.[0]?.url} 
        alt={artist.name}
        class="h-64 w-64 md:h-80 md:w-80 object-cover rounded-2xl shadow-[0_20px_50px_rgba(0,0,0,0.5)] border border-white/10"
        transition:name={`artist-image-${artist.id}`}
      />
    </div>

    <div class="flex flex-col gap-3 text-center md:text-left pb-2">
      <span class="inline-flex items-center justify-center md:justify-start gap-2 text-[#1DB954] text-[10px] font-black uppercase tracking-[0.2em]">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm-1.9 14.7L6.4 13l1.5-1.5 2.2 2.2 4.8-4.8 1.5 1.5-6.3 6.3z"/></svg>
        Artista Verificado
      </span>
      <h1 
        class="text-5xl md:text-8xl font-black tracking-tighter text-white"
        transition:name={`artist-name-${artist.id}`}
      >
        {artist.name}
      </h1>
      <p class="text-zinc-400 font-medium flex items-center justify-center md:justify-start gap-2 text-sm">
        <span class="text-white font-bold">{artist.followers?.total.toLocaleString() ?? '0'}</span> seguidores
        {artist.genres && artist.genres.length > 0 && (
          <>
            <span class="text-zinc-800">•</span>
            <span class="capitalize">{artist.genres.slice(0, 2).join(', ')}</span>
          </>
        )}
      </p>
    </div>
  </header>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
    <section class="lg:col-span-2">
      <h2 class="text-[10px] font-black uppercase tracking-[0.3em] text-zinc-500 mb-8 flex items-center gap-4">
        Populares <div class="h-px flex-1 bg-zinc-800/50"></div>
      </h2>
      <div class="flex flex-col rounded-3xl border border-zinc-800/40 bg-zinc-900/10 overflow-hidden">
        {topTracks.map((track, index) => (
          <div class="group flex items-center gap-4 p-4 transition-colors hover:bg-white/[0.03] border-b border-zinc-800/30 last:border-0">
            <span class="w-6 text-zinc-600 font-bold text-xs text-center group-hover:text-[#1DB954]">
              {(index + 1).toString().padStart(2, '0')}
            </span>
            <img src={track.album.images[2]?.url} class="h-10 w-10 rounded-lg shadow-lg" alt="" />
            <div class="flex-1 min-w-0">
              <p class="text-sm font-bold truncate text-zinc-200 group-hover:text-white">{track.name}</p>
              <p class="text-[11px] text-zinc-500 font-medium truncate">{track.album.name}</p>
            </div>
            <div class="flex items-center gap-4 px-2">
              {track.explicit && <span class="text-[8px] font-black bg-zinc-800 text-zinc-500 px-1.5 py-0.5 rounded-sm">E</span>}
              <span class="text-xs text-zinc-500 font-mono">
                {formatDuration(track.duration_ms)}
              </span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <aside>
      <h2 class="text-[10px] font-black uppercase tracking-[0.3em] text-zinc-500 mb-8 flex items-center gap-4">
        Álbumes <div class="h-px flex-1 bg-zinc-800/50"></div>
      </h2>
      <div class="grid grid-cols-2 gap-x-4 gap-y-8">
        {albums.map((album) => (
          /* Redirección interna a la página de álbumes */
          <a href={`/albums/${album.id}`} class="group flex flex-col gap-3">
            <div class="aspect-square overflow-hidden rounded-2xl bg-zinc-900 border border-white/5 shadow-xl">
              <img 
                src={album.images[0]?.url} 
                class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110" 
                alt={album.name}
                transition:name={`album-image-${album.id}`}
              />
            </div>
            <div class="px-1">
              <p 
                class="text-[11px] font-bold truncate leading-tight text-zinc-300 group-hover:text-[#1DB954] transition-colors"
                transition:name={`album-name-${album.id}`}
              >
                {album.name}
              </p>
              <p class="text-[10px] text-zinc-600 font-black mt-1">
                {album.release_date.split('-')[0]}
              </p>
            </div>
          </a>
        ))}
      </div>
    </aside>
  </div>
</Layout>